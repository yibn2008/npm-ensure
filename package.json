{
  "name": "npm-ensure",
  "version": "1.0.5",
  "description": "ensure your package is good to commit/publish:",
  "main": "index.js",
  "bin": {
    "npm-ensure": "bin/npm-ensure"
  },
  "directories": {
    "test": "test"
  },
  "ensure": {
    "deps": {
      "checkDirs": [
        "bin/*"
      ]
    }
  },
  "standard": {
    "global": [
      "describe",
      "it",
      "beforeEach",
      "afterEach"
    ],
    "ignore": [
      "/test"
    ]
  },
  "scripts": {
    "lint": "standard --fix && node bin/npm-ensure -t deps",
    "test": "mocha test/*.test.js",
    "precommit": "npm run lint",
    "release": "node bin/npm-ensure -t changelog && npm test && git release $npm_package_version && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yibn2008/npm-ensure.git"
  },
  "keywords": [
    "npm-ensure",
    "check",
    "dependencies"
  ],
  "author": "yibn2008",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yibn2008/npm-ensure/issues"
  },
  "homepage": "https://github.com/yibn2008/npm-ensure#readme",
  "dependencies": {
    "builtin-modules": "^1.1.1",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "debug": "^2.3.2",
    "dependency-analyze": "^1.0.2",
    "glob": "^7.1.1",
    "minimatch": "^3.0.3"
  },
  "devDependencies": {
    "standard": "^8.2.0",
    "assert-plus": "^1.0.0",
    "commander": "^2.9.0",
    "husky": "^0.11.9",
    "mocha": "^3.1.2"
  }
}
